<div class="container">
  <h1>Registered Pokemons</h1>
  <h4>Here is a list of all the registered pokemons on the platform.</h4>
  <br>
  <table>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Level</th>
      <th>Location</th>
      <th>Rate</th>
      <th>Availability</th>
    </tr>
    <% @pokemons.each do |p| %>
    <tr>
      <td><%= link_to p.name, pokemon_path(p) %></td>
      <td><%= p.pokemon_type %></td>
      <td><%= p.level %></td>
      <td><%= p.location %></td>
      <td><%= p.rate %></td>
      <% if p.booking != nil %>
        <th><%= p.booking.status %></th>
      <% end %>
    </tr>
    <% end %>
  </table>
</div>

<div class="card-container">
  <div class="card">
    <div class="imgBox">
      <%= image_tag 'Ivysaur.jpg', alt: 'ivysaur', class:"ivysaur" %>
    </div>
    <div class="contentBox">
      <h2>Pokemon Name</h2>
      <div class="type">
        <h3>Type :</h3>
        <span>Grass</span>
      </div>
      <div class="level">
        <h3>Level :</h3>
        <span></span>
      </div>
      <a href="#">Book Now</a>
    </div>
  </div>
</div>
