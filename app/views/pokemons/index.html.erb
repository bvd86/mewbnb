<div class="container">
  <div>
    <% if @user.is_gym_leader %>
    <%= link_to "âž• Add a pokemon", new_pokemon_path %>
    <% end %>
  </div>
  <hr>
  <h1 class="available">Available pokemons</h1>
  <hr>
  <div class="map-container">
    <div style="width: 100%vw; height: 55vw; position: relative;"
      data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
  <hr>
  <div class="card-container">
    <% @pokemons.each do |p| %>
      <% if p.booking != nil && p.booking.status.capitalize == "Available" %>
        <div class="card" data-text="<%= p.name %>">
          <div class="imgBox">
            <% picture = "https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/#{p.pokedex_entry}.png" %>
            <%= image_tag picture, alt: p.name, class:"ivysaur" %>
          </div>
          <div class="contentBox">
            <h2><%= link_to p.name, pokemon_path(p) %></h2>
            <div class="type">
              <h3>Type :</h3>
              <span><%= p.pokemon_type %></span>
            </div>
            <div class="level">
              <h5>Level : <%= p.level %></h5>
            </div>
            <%= link_to "Book now", new_pokemon_booking_path(p), class: "btn-primary" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
