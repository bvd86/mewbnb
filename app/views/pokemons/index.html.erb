<div class="container">
  <div style="display: flex; justify-content: space-between">
    <h1>Registered Pokemons</h1>
    <%= link_to "âž• Add a pokemon", new_pokemon_path %>
  </div>
  <h4>Here is a list of all the registered pokemons on the platform.</h4>
  <br>
  <table style="table-layout: fixed; width: 70vw;">
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Level</th>
      <th>Location</th>
      <th>Rate</th>
      <th>Availability</th>
    </tr>
    <% @pokemons.each do |p| %>
      <% if p.booking.nil? && p.user != @user %>
      <% else %>
      <tr>
        <td><%= link_to p.name, pokemon_path(p) %></td>
        <td><%= p.pokemon_type %></td>
        <td><%= p.level %></td>
        <td><%= p.location %></td>
        <td><%= p.rate %></td>
        <% if p.booking == nil && p.user == @user %>
          <td><%= link_to "Create an offer", new_pokemon_booking_path(p) %></td>
        <% elsif p.booking != nil %>
          <td><%= p.booking.status %></td>
        <% end %>
      </tr>
      <% end %>
    <% end %>
  </table>
</div>

<div class="card-container">
  <div class="card">
    <div class="imgBox">
      <%= image_tag 'Ivysaur.jpg', alt: 'ivysaur', class:"ivysaur" %>
    </div>
    <div class="contentBox">
      <h2>Pokemon Name</h2>
      <div class="type">
        <h3>Type :</h3>
        <span>Grass</span>
      </div>
      <div class="level">
        <h3>Level :</h3>
        <span></span>
      </div>
      <a href="#">Book Now</a>
    </div>
  </div>
</div>
