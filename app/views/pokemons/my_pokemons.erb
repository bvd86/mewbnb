
<% if @pokemons.nil? %>
  <p>You do not have any pokemons</p>
<% else %>

<h2>Available pokemons</h2>

  <div class="row row-cols-1 row-cols-md-3 g-4">

    <% @pokemons.each do |p| %>
      <% if p.booking.nil? || p.booking.status == "Available" || p.booking.status == "Pending" %>
        <div class="col">
          <div class="card">
            <%= image_tag p.picture, class: "card-img-top" %>
            <div class="card-body">
              <h5 class="card-title"><%= link_to p.name, pokemon_path(p) %></h5>
              <p class="card-text">
              </p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>



<% end %>
