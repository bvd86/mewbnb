<div class="return-title">
  <div class="btn-back">
    <%= link_to pokemons_path do %>
      <i class="fa-solid fa-reply"></i>
      <% end %>
  </div>
  <h2 style="text-align: center;">Create a booking</h2>
</div>
  <div class="booking-form">
  <%= simple_form_for [@pokemon, @booking] do |f| %>
    <div class="form-content">
      <div class="left-form">
        <%= cl_image_tag @pokemon.picture.key, class:"image-left-form", alt:@pokemon.name%>
      </div>
      <div class="right-form">
        <div class="start-date">
          <%= f.input :start_date, as: :date, html5: true %>
        </div>
        <div class="end-date">
          <%= f.input :end_date, as: :date, html5: true  %>
        </div>
      </div>
    </div>
    <%= f.submit "Create booking", class:"btn btn-grad submit" %>
  <% end %>
</div>
